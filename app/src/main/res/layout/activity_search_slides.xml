<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/slide_library_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:backgroundTint="@color/background_color_ss"
    android:outlineSpotShadowColor="#0B0A0A"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/poster_searchslide"
                android:layout_width="wrap_content"
                android:layout_height="260dp"
                android:src="@drawable/ic_launcher_background" />

            <LinearLayout
                android:id="@+id/detil_searchslide"
                android:layout_width="185dp"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/movie_name_searchslide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Eternal Sunshine Of The Spotless Mind"
                    android:textColor="@color/details_font_color_ss"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/year_searchslide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Year:"
                        android:textColor="@color/details_font_color_ss"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/imdb_searchslide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IMDB:"
                        android:textColor="@color/details_font_color_ss"
                        android:textSize="17dp" />


                    <TextView
                        android:id="@+id/rotten_tomato_searchslide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RT:"
                        android:textColor="@color/details_font_color_ss"
                        android:textSize="17dp" />
                    <TextView
                        android:id="@+id/genre_searchslide"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Genre:"
                        android:textColor="@color/details_font_color_ss"
                        android:textSize="17dp" />
                    <TextView
                        android:id="@+id/duration_searchslide"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Duration:"
                        android:textColor="@color/details_font_color_ss"
                        android:textSize="17dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/play_searchslide"
            android:layout_width="85dp"
            android:layout_height="45dp"
            android:background="@drawable/capsule_corner_button"
            android:textSize="15dp"
            android:textColor="@color/button_font_color_ss"
            android:text="Play"
            android:layout_marginTop="2dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>